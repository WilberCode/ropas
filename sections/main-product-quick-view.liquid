<div class="modal-container" data-modal-container="" data-modal-animation-state="open" tabindex="-1">
  <div class="modal allow-scroll-while-locked" data-modal="" tab-index="-1">
    <div class="modal__header-container">
      <button type="button" class="modal__header-close" aria-label="{{ 'general.form.close' | t | escape }}" data-modal-close>{%- render 'icons', id: 'close', size: 18 -%}</button>
    </div>
    <div class="modal__content scroll-bar-v" data-modal-content>
      {% render 'product.quick', product: product, section: section %}
    </div>
  </div>
  <div class="modal-background" data-modal-background></div>
</div>

{% schema %}
  {
    "name": "t:settings_schema.quick.name"
  }
{% endschema %}